https://www.hackerrank.com/challenges/variable-sized-arrays/problem

#include <cmath>
#include <cstdio>
#include <vector>
#include <iostream>
#include <algorithm>
#include<iterator>
using namespace std;


int main() {
    /* Enter your code here. Read input from STDIN. Print output to STDOUT */
    int n,q,k,i,j;
    cin>>n>>q;
    std::vector< vector<int> >arr(n);
    for(i=0;i<n;++i){
        cin>>k;
        arr[i].resize(k);
        for(j=0;j<k;++j){
            cin>>arr[i][j];
        }
    }
    for(int z=0;z<q;++z){
        cin>>i>>j;
        cout<<arr[i][j]<<'\n';
        
    }
    
    return 0;
}
